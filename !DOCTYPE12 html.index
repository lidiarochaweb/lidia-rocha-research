*{margin:0;padding:0;box-sizing:border-box;}
body{font-family:'Inter',sans-serif;background:linear-gradient(180deg,#ffffff 0%,var(--soft-bg) 100%);color:var(--dark);overflow-x:hidden;}

nav{position:fixed;top:0;width:100%;background:rgba(74,0,0,0.96);padding:18px 8%;display:flex;justify-content:space-between;align-items:center;z-index:1000;backdrop-filter:blur(10px);} 
nav .logo{color:white;font-weight:600;letter-spacing:3px;}
nav .menu a{color:white;text-decoration:none;margin-left:30px;font-size:13px;letter-spacing:1.5px;position:relative;}
nav .menu a::after{content:"";position:absolute;bottom:-6px;left:0;width:0%;height:1px;background:var(--gold);transition:0.3s;} 
nav .menu a:hover::after{width:100%;}

.language-switch button{background:transparent;border:1px solid var(--gold);color:white;padding:6px 12px;margin-left:6px;border-radius:20px;cursor:pointer;font-size:11px;transition:0.3s;}
.language-switch button:hover{background:var(--gold);color:#000;}

header{background:linear-gradient(135deg,var(--harvard-red),var(--deep-red));color:white;padding:220px 10% 170px 10%;position:relative;text-align:center;overflow:hidden;}
canvas{position:absolute;top:0;left:0;width:100%;height:100%;z-index:0;}
header h1, header .subtitle{position:relative;z-index:1;}
h1{font-family:'Cinzel',serif;font-size:54px;letter-spacing:3px;}
.subtitle{margin-top:20px;font-size:18px;font-weight:300;letter-spacing:1px;opacity:0.95;max-width:900px;margin-left:auto;margin-right:auto;}

section{padding:150px 12% 100px 12%;max-width:1400px;margin:auto;}
h2{font-family:'Cinzel',serif;color:var(--harvard-red);font-size:34px;margin-bottom:50px;text-align:center;}

.statement{max-width:1000px;margin:auto;font-size:18px;line-height:2.1;text-align:justify;}

.grid{display:grid;grid-template-columns:repeat(auto-fit,minmax(300px,1fr));gap:40px;margin-top:60px;}
.card{background:white;border:1px solid #eee;padding:40px;border-radius:16px;transition:0.4s;}
.card:hover{transform:translateY(-6px);box-shadow:0 20px 50px rgba(0,0,0,0.07);border-color:var(--gold);} 
.card h3{color:var(--harvard-red);margin-bottom:15px;font-family:'Cinzel',serif;}
.card p{line-height:1.9;font-size:16px;}

.dialog-box{border:1px solid var(--gold);border-radius:12px;padding:20px;margin-top:25px;cursor:pointer;transition:0.3s;background:#fff;}
.dialog-box:hover{background:#fffdf6;}
.dialog-content{display:block;margin-top:15px;font-size:15px;line-height:1.8;}

footer{background:linear-gradient(135deg,var(--harvard-red),var(--deep-red));color:white;text-align:center;padding:100px 20px;}
.contact a{color:var(--soft-gold);background:transparent;border:1px solid var(--soft-gold);padding:10px 22px;margin:12px auto;display:block;text-decoration:none;border-radius:30px;transition:0.3s;width:280px;text-align:center;font-size:14px;letter-spacing:0.5px;}
.contact a:hover{background:var(--soft-gold);color:#4A0000;}

[data-lang]{display:none;}
.hidden-page{display:none;}

@media(max-width:900px){nav .menu{display:none;}section{padding:120px 8%;}}
</style>

<script>
function setLanguage(lang){document.querySelectorAll('[data-lang]').forEach(el=>{el.style.display=el.getAttribute('data-lang')===lang?'block':'none';});}
window.onload=function(){setLanguage('en');initNeuro();}

function toggleDialog(id){var el=document.getElementById(id);el.style.display=el.style.display==='block'?'none':'block';}

function openResearchPlatform(){
 document.getElementById('mainContent').style.display='none';
 document.getElementById('researchPlatformPage').style.display='block';
 window.scrollTo(0,0);
}

function goBack(){
 document.getElementById('researchPlatformPage').style.display='none';
 document.getElementById('mainContent').style.display='block';
 window.scrollTo(0,0);
}

function initNeuro(){const canvas=document.getElementById('neuro');const ctx=canvas.getContext('2d');canvas.width=window.innerWidth;canvas.height=window.innerHeight;let particles=[];for(let i=0;i<160;i++){particles.push({x:Math.random()*canvas.width,y:Math.random()*canvas.height,r:Math.random()*2+1,dx:(Math.random()-0.5)*0.5,dy:(Math.random()-0.5)*0.5});}
function animate(){ctx.clearRect(0,0,canvas.width,canvas.height);ctx.fillStyle='rgba(201,162,39,0.8)';particles.forEach(p=>{p.x+=p.dx;p.y+=p.dy;if(p.x<0||p.x>canvas.width)p.dx*=-1;if(p.y<0||p.y>canvas.height)p.dy*=-1;ctx.beginPath();ctx.arc(p.x,p.y,p.r,0,Math.PI*2);ctx.fill();});requestAnimationFrame(animate);}animate();}
</script>
